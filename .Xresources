! xTerminal congig
! Font
! https://github.com/be5invis/Iosevka
XTerm.termName: xterm-256color
XTerm*faceName: Iosevka Term Regular
XTerm*faceSize:					12
XTerm*faceSize1:				10
XTerm*faceSize2:				12
XTerm*faceSize3:				14
XTerm*faceSize4:				16
XTerm*faceSize5:				24
XTerm*faceSize6:				28

XTerm*allowWindowOps: true

! Selection
XTerm*highlightSelection:		true
XTerm*trimSelection:			true

! Scroll related
XTerm*vt100.scrollBar:			false
XTerm*scrollTtyOutput:			true
XTerm*saveLines:				10000

! Copy paste (Select to copy, Shift+Insert to paste)
XTerm*selectToClipboard:		false

! Keybinds
XTerm*vt100.translations: #override \n\
  Ctrl <Key>-: smaller-vt-font() \n\
  Ctrl <Key>+: larger-vt-font() \n\
  Ctrl <Key>0: set-vt-font(d) \n\
  Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

! UI stuff
XTerm*cursorColor:		#ffffff
XTerm*pointerColor:             white
XTerm*pointerColorBackground:   black
XTerm*pointerShape:             left_ptr
! XTerm*vt100.internalBorder:   4

XTerm*.mainMenu.label:          File
XTerm*.vtMenu.label:            Options
XTerm*.fontMenu.label:          View

XTerm*title: Terminal
XTerm*vt100.geometry:           130x30
XTerm*vt100.background:		#222222
XTerm*vt100.foreground:		#f3f6f4
XTerm*.SimpleMenu.background:   #ffffff
XTerm*.SimpleMenu.foreground:   #000000



